<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:controls="clr-namespace:WalletWasabi.Gui.Controls;assembly=WalletWasabi.Gui">
  <controls:GroupBox Title="{Binding Title}" BorderThickness="0" Classes="docTabContainer">
    <StackPanel>
      <Grid Classes="content" Margin="0 10 0 0">
        <StackPanel Orientation="Vertical">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="Current Version: " />
            <controls:ExtendedTextBox Text="{Binding VersionText}" Classes="selectableTextBlock" />
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="To get the latest version, please visit: " />
            <controls:ExtendedTextBox Text="https://github.com/zkSNACKs/WalletWasabi/releases/" Classes="selectableTextBlock hyperLink" />
          </StackPanel>
          <TextBlock Text="Consider using Tor Browser to protect your privacy." />
        </StackPanel>
      </Grid>
    </StackPanel>
  </controls:GroupBox>
</UserControl>
